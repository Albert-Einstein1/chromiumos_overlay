Section "ServerFlags"
	Option "AutoAddDevices" "false"
	Option "DontZap" "false"
EndSection

Section "Screen"
	Identifier "Default Screen"
	Device "Configured Video Device"
	DefaultDepth 16
EndSection

Section "Device"
	Identifier "Configured Video Device"
	Driver "omapfb"
	Option "fb" "/dev/fb0"
EndSection
